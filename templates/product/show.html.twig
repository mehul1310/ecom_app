{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h3>{{ product.title }}</h3>
        </div>
        <div class="card-body">
            {% if product.image %}
                <img src="/uploads/{{ product.image }}" alt="{{ product.title }}" class="img-fluid rounded mb-3" style="max-width: 300px;">
            {% endif %}
            <p class="lead">{{ product.description }}</p>
            <p><strong>Price:</strong> {{ product.priceExclVat }}â‚¬</p>
            <p><strong>Category:</strong> {{ product.category.name }}</p>
            <a href="{{ path('product_list') }}" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
{% endblock %}
